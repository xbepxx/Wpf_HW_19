<Window x:Class="Wpf_HW_19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_HW_19"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Wpf_HW_19.ViewModels"
        Title="MainWindow" Height="450" Width="450">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Path=Number1}"/>
            <Button Content="Длина окружности" Command="{Binding Path=AddCommand}"/>
            <TextBox Text="{Binding Path=Number2}"/>
        </StackPanel>
    </Grid>
</Window>
